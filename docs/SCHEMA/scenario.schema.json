{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://amp-se-demos/docs/SCHEMA/scenario.schema.json",
  "title": "Scenario",
  "type": "object",
  "required": ["id", "title", "project", "flow", "value_proof"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "title": { "type": "string", "minLength": 1 },
    "level": { "type": "string", "enum": ["quick-win", "core", "deep-dive"] },
    "project": { "type": "string", "minLength": 1 },
    "prerequisites": {
      "type": "array",
      "items": { "type": "string" }
    },
    "problem_statement": { "type": "string" },
    "solution_summary": { "type": "string" },
    "flow": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["step", "description"],
        "additionalProperties": false,
        "properties": {
          "step": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 }
        }
      }
    },
    "value_proof": {
      "type": "object",
      "required": ["metrics"],
      "additionalProperties": true,
      "properties": {
        "metrics": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "target"],
            "additionalProperties": true,
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "target": {}
            }
          }
        }
      }
    },
    "talk_track": { "type": "string" },
    "toolbox": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "estimated_duration_min": { "type": "number", "minimum": 0 }
  }
}
